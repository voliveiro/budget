<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Budget</title>
    <link href= "/assets/style.css" rel="stylesheet" type="text/css" />
</head>
<body>
    
    <h1> Budget </h1>

    <main> 

    <table> 
        <thead>
            <tr> 
                <th>From</th>
                <th>Amount</th>
                <th>Date</th>
            </tr>
        </thead>
    <%budgetData.forEach(element => {%>
        <tr> 
            <td class="from"> 
                <% let indexNo = budgetData.indexOf(element)%>
                <a href="/budgetitem/<%=indexNo%>"> 
                <%=element.from%> 
                </a> 
            </td>
            <td class="amount"> 
                <%=element.amount%>
            </td>
            <td class="date">  
                <%=element.date%>
            </td>
        </tr>

    <%})%> 

    </table>
    </main>

    <footer> 

    <div class="link-div" id="add-budget-item-btn"> 
        <p> Add Budget Item </p>
    </div>
    </footer> 

    <script src="/js/index_app.js"> </script>
</body>
</html>